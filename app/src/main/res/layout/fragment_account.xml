<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="innt.ffhs.ch.funday.AccountFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/accountTitle"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:text="Account Details"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/accountName"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/nameTitle"
            android:layout_below="@+id/nameTitle"
            android:text="Account Details"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/nameTitle"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/accountTitle"
            android:layout_below="@+id/accountTitle"
            android:layout_marginTop="27dp"
            android:text="Name"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/mailTitle"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/accountName"
            android:layout_below="@+id/accountName"
            android:layout_marginTop="27dp"
            android:text="Mail"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/accountName"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/nameTitle"
            android:layout_below="@+id/nameTitle"
            android:text="Account Details"
            android:textSize="15dp" />
    </RelativeLayout>

</FrameLayout>
